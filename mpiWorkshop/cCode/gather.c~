#include <stdio.h>
#include "mpi.h"
int main(int argc, char **argv) {

  int isend, irecv[3];
  int rank, size;

  MPI_Init(&argc, &argv);
  MPI_Comm_rank(MPI_COMM_WORLD, &rank);
  Mpi_Comm_Size(MPI_COMM_WORLD, &size);

  isend = rank + 1;

  MPI_Gather(&isend, 1, MPI_INT, &irecv, 1, MPI_INT, 0, MPI_COMM_WORLD);


  
}
